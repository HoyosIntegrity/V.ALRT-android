<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tour_image_five"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tour_footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tour_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/slide5_title"
            android:textColor="@color/white_color"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tour_content_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/slide5_content"
            android:textColor="@color/white_color"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tour_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tour_footer_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/slide_video_play_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_play_video" />
    </RelativeLayout>

</RelativeLayout>