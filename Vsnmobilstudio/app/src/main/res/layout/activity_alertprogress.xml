<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_rounded_corner_white"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/alertinprogress_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_size"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/alertinprogress_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/alert_in_progress"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/alertinprogress_header_layout"
        android:background="@color/purple_color" />

    <TextView
        android:id="@+id/alertinprogress_no_contacts_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/no_contacts"
        android:textColor="@android:color/darker_gray" />

    <!-- Start of First @string/sms Layout -->

    <LinearLayout
        android:id="@+id/alertinprogress_first_sms_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_view"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/sms"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/alertinprogress_first_sms_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/sample_phnumber"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/alertinprogress_first_sms_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_alerttick"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- End of First @string/sms Layout -->


    <!-- Start of second @string/sms Layout -->

    <LinearLayout
        android:id="@+id/alertinprogress_second_sms_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertinprogress_first_sms_layout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:textColor="@color/violet_color"
        android:textSize="@dimen/normal_text_size"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/sms"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/alertinprogress_second_sms_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/sample_phnumber"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/alertinprogress_second_sms_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_alerttick"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- End of Second @string/sms Layout -->


    <!-- Start of Third @string/sms Layout -->

    <LinearLayout
        android:id="@+id/alertinprogress_third_sms_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertinprogress_second_sms_layout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/sms"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/alertinprogress_third_sms_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/sample_phnumber"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/alertinprogress_third_sms_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_alerttick"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- End of Third @string/sms Layout -->


    <!-- Start of First @string/call Layout -->

    <LinearLayout
        android:id="@+id/alertinprogress_first_call_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertinprogress_third_sms_layout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/alertinprogress_first_call_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/alert_call"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/alertinprogress_first_call_number_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/sample_phnumber"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/alertinprogress_first_call_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_alerttick"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- End of First @string/call Layout -->


    <!-- Start of second @string/call Layout -->

    <LinearLayout
        android:id="@+id/alertinprogress_second_call_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertinprogress_first_call_layout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/alertinprogress_second_call_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/alert_call"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/alertinprogress_second_call_number_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/accurate_location_unavailable"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/alertinprogress_second_call_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_alerttick"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- End of Second @string/call Layout -->


    <!-- Start of Third @string/call Layout -->

    <LinearLayout
        android:id="@+id/alertinprogress_third_call_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertinprogress_second_call_layout"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/alertinprogress_third_call_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/alert_call"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/alertinprogress_third_call_number_textview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/accurate_location_unavailable"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/alertinprogress_third_call_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_alerttick"
            android:visibility="invisible" />
    </LinearLayout>

    <!-- End of Third @string/call Layout -->


    <!-- Start of Cancel All Button -->

    <Button
        android:id="@+id/alertinprogress_cancel_all_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rounded_corner_red"
        android:onClick="DisableCall"
        android:padding="15dp"
        android:text="@string/cancelall"
        android:textColor="@color/white_color"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />
    <!-- End of Cancel All Button -->

</RelativeLayout>