<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dialog_margin"
    android:background="@drawable/shape_rounded_corner_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/rename_title_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_title_msg_height"
        android:layout_marginTop="3dp"
        android:gravity="center|center_vertical"
        android:maxLength="90"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/change_name"
        android:textColor="@color/violet_color"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rename_text_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_rounded_corner_with_storke"
        android:hint=""
        android:inputType="text"
        android:maxLength="16"
        android:padding="10dp"
        android:textColor="@color/violet_color"
        android:textSize="@dimen/normal_text_size" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/purple_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_header_size"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rename_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/purple_color" />

        <Button
            android:id="@+id/rename_save_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>