<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dialog_margin"
    android:background="@drawable/shape_rounded_corner_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/location_container_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/location_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/location_container_layout"
        android:background="@color/purple_color" />

    <RelativeLayout
        android:id="@+id/location_footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/location_divider" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/top_header_size"
            android:orientation="horizontal"
            android:weightSum="2"
            tools:ignore="UselessParent" >

            <Button
                android:id="@+id/location_cancel_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/violet_color"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />

            <View
                android:id="@+id/location_divider1"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/purple_color" />

            <Button
                android:id="@+id/location_settings_button"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/valrt_settings"
                android:textColor="@color/violet_color"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>