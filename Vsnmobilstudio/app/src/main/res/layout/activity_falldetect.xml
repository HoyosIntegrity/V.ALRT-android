<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/shape_rounded_corner_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/falldetect_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/alert_title_msg_height" >

        <TextView
            android:id="@+id/falldetect_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center|bottom"
            android:text="@string/fall_detected"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/heading_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/falldetect_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/falldetect_header_layout"
        android:layout_marginBottom="10dip" >

        <TextView
            android:id="@+id/falldetect_content_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dip"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/heading_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/second_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/falldetect_content_layout"
        android:background="@color/purple_color" />

    <RelativeLayout
        android:id="@+id/falldetect_footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_header_size"
        android:layout_below="@+id/second_view" >

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/violet_color"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>